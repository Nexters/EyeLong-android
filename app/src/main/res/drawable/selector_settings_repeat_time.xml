<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/colorGreen_500" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorGreen_500" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item android:color="@color/colorGray_800" android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorGray_800" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>