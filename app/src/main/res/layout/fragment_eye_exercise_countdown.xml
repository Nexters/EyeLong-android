<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.teamnexters.eyelong.ui.exercise.fragment.EyeExerciseCountdownFragment">

    <data>

        <import type="com.teamnexters.eyelong.application.ResourceKt" />

        <variable
            name="step"
            type="Integer" />

        <variable
            name="exercise"
            type="com.teamnexters.eyelong.db.entity.Exercise" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_back_btn_black" />
            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_exercise_step"
                    android:layout_width="184dp"
                    android:layout_height="61dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:step="@{step}" />

                <FrameLayout
                    android:id="@+id/layout_exercise_icon"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="427dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_exercise_step">

                    <ImageView
                        android:id="@+id/img_exercise_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxWidth="120dp"
                        android:maxHeight="295dp"
                        android:scaleType="fitXY"
                        app:icon="@{ResourceKt.getIconImagePath(exercise.id)}" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_exercise_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/notosanscjkkrbold"
                    android:includeFontPadding="false"
                    android:text="@{exercise.name}"
                    android:textColor="@color/colorBlack_900"
                    android:textSize="28sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_exercise_icon" />

                <TextView
                    android:id="@+id/tv_exercise_effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/notosanscjkkrmedium"
                    android:includeFontPadding="false"
                    android:text="@{exercise.effectTitle}"
                    android:textColor="@color/colorBlack_400"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_exercise_name"
                    app:layout_constraintStart_toStartOf="@+id/tv_exercise_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_exercise_name" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_exercise_countdown"
                    android:layout_width="0dp"
                    android:layout_height="294dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:step="@{step}">

                    <TextView
                        android:id="@+id/tv_exercise_countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/notosanscjkkrmedium"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorBlack_800"
                        android:textSize="120sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/toast_exercise_start"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="51dp"
                        android:layout_marginEnd="51dp"
                        android:layout_marginBottom="59dp"
                        android:background="@drawable/bg_btn_round_box_remon"
                        android:fontFamily="@font/notosanscjkkrmedium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/exercise_start_message"
                        android:textColor="@color/colorBlack_800"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </FrameLayout>
</layout>
